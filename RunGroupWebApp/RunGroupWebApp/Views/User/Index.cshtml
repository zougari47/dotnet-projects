@using RunGroupWebApp.ViewModels;
@model List<UserViewModel>

<h1 class="text-center mb-4">List of Users</h1>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img src="@item.ProfileImageUrl" alt="" width="100%" />
                        <div class="card-body">
                            <p class="card-text">@item.UserName</p>
                            <p class="card-text">@item.Mileage</p>
                            <p class="card-text">@item.Pace</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-groupf d-flex gap-3">
                                    <a asp-controller="User" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-primary">
                                        View
                                    </a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">
                                            Edit
                                        </a>
                                        <a asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="delete">
                                            Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>